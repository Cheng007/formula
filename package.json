{
  "name": "formula",
  "version": "1.0.0",
  "description": "Formula editor with custom functions and special data types",
  "main": "index.js",
  "workspaces": [
    "packages/lexer",
    "packages/parser"
  ],
  "scripts": {
    "prepare": "husky",
    "lint:js": "eslint --cache .",
    "lint:prettier": "prettier --cache --list-different .",
    "fix:js": "npm run lint:js -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix": "npm run fix:js && npm run fix:prettier",
    "commitlint": "commitlint --from=master",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.4.0",
    "@types/eslint__js": "^8.42.3",
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0"
  },
  "keywords": [
    "formula editor",
    "custom functions",
    "special data types"
  ],
  "author": "Cheng007 <565460621@qq.com> (https://github.com/Cheng007)",
